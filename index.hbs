{{!-- Add layout --}}
{{!< default}}
<section id="cover" class="cover vertiacal-aling full-height">
    {{#if @blog.cover}}<div class="background" style="background-image: url({{@blog.cover}})"></div>{{/if}}
    <div class="vertiacal-aling-wrap">
        
        <article class="cover-wrap vertiacal-aling-content">
            <div class="Aboutme-img"></div>
            {{!-- Blog name --}}
            <h1 class="cover-title animated bounceInDown">{{@blog.title}}</h1>
            {{!-- Blog description --}}
            <p class="cover-description animated bounceIn">{{@blog.description}}</p>
        </article>
    </div>
    <a href="#main" class="scrolltop mouse hide-before-md"><span class="scroll"></span></a>
</section>
{{! The tag below includes the post loop - partials/loop.hbs }}
{{> "loop"}}
