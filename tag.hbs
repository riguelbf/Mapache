{{!-- Add Layout --}}
{{!< default}}
<section id="cover" class="cover vertiacal-aling">
    {{#if tag.image}}<div class="background" style="background-image: url({{tag.image}}); opacity: 0.7;"></div>{{/if}}
    <div class="vertiacal-aling-wrap">
        <article class="cover-wrap vertiacal-aling-content">
            {{!-- Tag name --}}
            <h1 class="cover-title">{{tag.name}}</h1>
            {{!-- tag description --}}
            <p class="cover-description">{{#if tag.description}}{{tag.description}}{{else}}A collection of {{pagination.total}} Articles{{/if}}</p>
        </article>
    </div>
    <a href="#main" class="scrolltop mouse hide-before-md"><span class="scroll"></span></a>
</section>
{{!-- Add Loop --}}
{{> "loop"}}
